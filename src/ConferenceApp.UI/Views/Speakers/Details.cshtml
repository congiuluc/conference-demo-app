@model Speaker

@{
    ViewData["Title"] = "Speaker Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-badge"></i> @Model.Name
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Title:</dt>
                                <dd class="col-sm-8">@(Model.Title ?? "Not specified")</dd>

                                <dt class="col-sm-4">Company:</dt>
                                <dd class="col-sm-8">@(Model.Company ?? "Not specified")</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Website:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <a href="@Model.Website" target="_blank" rel="noopener">
                                            @Model.Website <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Twitter:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.TwitterHandle))
                                    {
                                        <a href="https://twitter.com/@Model.TwitterHandle" target="_blank" rel="noopener">
                                            @@@@Model.TwitterHandle <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">LinkedIn:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.LinkedInProfile))
                                    {
                                        <a href="@Model.LinkedInProfile" target="_blank" rel="noopener">
                                            LinkedIn Profile <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Telegram:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.TelegramUsername))
                                    {
                                        <a href="https://t.me/@Model.TelegramUsername" target="_blank" rel="noopener">
                                            @@@@Model.TelegramUsername <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Added:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <hr />
                        <h5>Biography</h5>
                        <p class="text-muted">@Model.Bio</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Speaker
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Sessions" asp-action="BySpeaker" asp-route-speakerId="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-calendar-event"></i> View Sessions
                        </a>
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email?subject=Conference Invitation" class="btn btn-outline-success">
                                <i class="bi bi-envelope"></i> Send Email
                            </a>
                        }
                        <a asp-action="Create" class="btn btn-outline-secondary">
                            <i class="bi bi-plus-lg"></i> Add Another Speaker
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">Speaker Stats</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <i class="bi bi-calendar-event"></i> Sessions: <span class="badge bg-primary">TBD</span>
                    </p>
                    <p class="card-text">
                        <i class="bi bi-people"></i> Total Attendees: <span class="badge bg-info">TBD</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
