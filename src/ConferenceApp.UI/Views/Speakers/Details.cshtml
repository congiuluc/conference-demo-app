@model Speaker

@{
    ViewData["Title"] = "Speaker Details";
}

<div class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-badge"></i> @Model.Name
                    </h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="">
                            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <dt class="col-sm-4">Title:</dt>
                                <dd class="col-sm-8">@(Model.Title ?? "Not specified")</dd>

                                <dt class="col-sm-4">Company:</dt>
                                <dd class="col-sm-8">@(Model.Company ?? "Not specified")</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="">
                            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <dt class="col-sm-4">Website:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <a href="@Model.Website" target="_blank" rel="noopener">
                                            @Model.Website <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Twitter:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.TwitterHandle))
                                    {
                                        <a href="https://twitter.com/@Model.TwitterHandle" target="_blank" rel="noopener">
                                            @@@@Model.TwitterHandle <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">LinkedIn:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.LinkedInProfile))
                                    {
                                        <a href="@Model.LinkedInProfile" target="_blank" rel="noopener">
                                            LinkedIn Profile <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Added:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <hr />
                        <h5>Biography</h5>
                        <p class="text-gray-600">@Model.Bio</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                        <i class="bi bi-pencil"></i> Edit Speaker
                    </a>
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors duration-200">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
        
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="p-6">
                    <div class="d-grid gap-2">
                        <a asp-controller="Sessions" asp-action="BySpeaker" asp-route-speakerId="@Model.Id" class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors duration-200">
                            <i class="bi bi-calendar-event"></i> View Sessions
                        </a>
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email?subject=Conference Invitation" class="inline-flex items-center px-4 py-2 bg-green-50 text-green-700 text-sm font-medium rounded-lg hover:bg-green-100 transition-colors duration-200">
                                <i class="bi bi-envelope"></i> Send Email
                            </a>
                        }
                        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-gray-50 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-100 transition-colors duration-200">
                            <i class="bi bi-plus-lg"></i> Add Another Speaker
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h6 class="card-title mb-0">Speaker Stats</h6>
                </div>
                <div class="p-6">
                    <p class="card-text">
                        <i class="bi bi-calendar-event"></i> Sessions: <span class="badge bg-primary">TBD</span>
                    </p>
                    <p class="card-text">
                        <i class="bi bi-people"></i> Total Attendees: <span class="badge bg-info">TBD</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
