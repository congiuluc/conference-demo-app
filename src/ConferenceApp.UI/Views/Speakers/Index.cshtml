@model IEnumerable<Speaker>

@{
    ViewData["Title"] = "Speakers";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div class="flex items-center space-x-3">
            <div class="p-2 bg-blue-100 rounded-lg">
                <i class="fas fa-microphone text-blue-600 text-xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h1>
        </div>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
            <i class="fas fa-plus mr-2"></i> Add New Speaker
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var speaker in Model)
            {
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200">
                    <div class="p-6 h-full flex flex-col">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">@speaker.Name</h3>
                        <p class="text-blue-600 font-medium mb-2">@speaker.Title</p>
                        <p class="text-gray-600 mb-4">@speaker.Company</p>
                        
                        @if (!string.IsNullOrEmpty(speaker.Bio))
                        {
                            <p class="text-gray-700 text-sm mb-4 flex-grow">
                                @(speaker.Bio.Length > 100 ? speaker.Bio.Substring(0, 100) + "..." : speaker.Bio)
                            </p>
                        }
                        
                        @if (!string.IsNullOrEmpty(speaker.Email))
                        {
                            <p class="text-gray-600 text-sm mb-4 flex items-center">
                                <i class="fas fa-envelope mr-2"></i> @speaker.Email
                            </p>
                        }
                        
                        <div class="space-y-2 mt-auto">
                            <div class="flex space-x-2">
                                <a asp-action="Details" asp-route-id="@speaker.Id" class="flex-1 px-3 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-eye mr-1"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@speaker.Id" class="flex-1 px-3 py-2 bg-gray-50 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-edit mr-1"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@speaker.Id" class="flex-1 px-3 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-trash mr-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-12 bg-white rounded-xl shadow-md">
            <i class="fas fa-microphone text-5xl text-gray-400 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No Speakers Found</h3>
            <p class="text-gray-600 mb-6">Get started by adding your first speaker.</p>
            <a asp-action="Create" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                <i class="fas fa-plus mr-2"></i> Add First Speaker
            </a>
        </div>
    }
</div>
