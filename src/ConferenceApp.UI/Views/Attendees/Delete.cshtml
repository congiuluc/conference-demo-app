@model Attendee

@{
    ViewData["Title"] = "Delete Attendee";
}

<div class="space-y-6">
    <div class="row justify-content-center">
        <div class="lg:col-span-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Attendee
                    </h3>
                </div>
                <div class="p-6">
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this attendee?
                    </div>

                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Phone:</dt>
                        <dd class="col-sm-9">@(Model.Phone ?? "Not provided")</dd>

                        <dt class="col-sm-3">Company:</dt>
                        <dd class="col-sm-9">@(Model.Company ?? "Not specified")</dd>

                        <dt class="col-sm-3">Job Title:</dt>
                        <dd class="col-sm-9">@(Model.JobTitle ?? "Not specified")</dd>

                        <dt class="col-sm-3">Registration:</dt>
                        <dd class="col-sm-9">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsConfirmed)
                            {
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">Confirmed</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">Pending</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Bio))
                        {
                            <dt class="col-sm-3">Bio:</dt>
                            <dd class="col-sm-9">@(Model.Bio.Length > 200 ? Model.Bio.Substring(0, 200) + "..." : Model.Bio)</dd>
                        }

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>

                        <dt class="col-sm-3">Last Updated:</dt>
                        <dd class="col-sm-9">@(Model.ModifiedDate?.ToString("MM/dd/yyyy") ?? "Never")</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200" onclick="return confirm('Are you absolutely sure you want to delete this attendee? This action cannot be undone.')">
                            <i class="bi bi-trash3"></i> Yes, Delete Attendee
                        </button>
                    </form>
                    
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    
                    <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-cyan-50 text-cyan-700 text-sm font-medium rounded-lg hover:bg-cyan-100 transition-colors duration-200">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
