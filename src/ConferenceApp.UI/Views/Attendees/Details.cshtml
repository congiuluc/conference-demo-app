@model Attendee

@{
    ViewData["Title"] = "Attendee Details";
}

<div class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person"></i> @Model.FirstName @Model.LastName
                    </h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="">
                            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Company:</dt>
                                <dd class="col-sm-8">@(Model.Company ?? "Not specified")</dd>

                                <dt class="col-sm-4">Job Title:</dt>
                                <dd class="col-sm-8">@(Model.JobTitle ?? "Not specified")</dd>
                            </dl>
                        </div>
                        <div class="">
                            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <dt class="col-sm-5">Conference:</dt>
                                <dd class="col-sm-7">
                                    <a asp-controller="Conferences" asp-action="Details" asp-route-id="@Model.ConferenceId">
                                        View Conference <i class="bi bi-box-arrow-up-right"></i>
                                    </a>
                                </dd>

                                <dt class="col-sm-5">Registration:</dt>
                                <dd class="col-sm-7">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.IsConfirmed)
                                    {
                                        <span class="px-2 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">Pending Confirmation</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Added:</dt>
                                <dd class="col-sm-7">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>

                                <dt class="col-sm-5">Updated:</dt>
                                <dd class="col-sm-7">@(Model.ModifiedDate?.ToString("MM/dd/yyyy") ?? "Never")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <hr />
                        <h5>Biography</h5>
                        <p class="text-gray-600">@Model.Bio</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                        <i class="bi bi-pencil"></i> Edit Attendee
                    </a>
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors duration-200">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
        
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="p-6">
                    <div class="d-grid gap-2">
                        <a href="mailto:@Model.Email?subject=Conference Information" class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors duration-200">
                            <i class="bi bi-envelope"></i> Send Email
                        </a>
                        @if (!Model.IsConfirmed)
                        {
                            <button type="button" class="inline-flex items-center px-4 py-2 bg-green-50 text-green-700 text-sm font-medium rounded-lg hover:bg-green-100 transition-colors duration-200" onclick="confirmAttendance('@Model.Id')">
                                <i class="bi bi-check-circle"></i> Confirm Attendance
                            </button>
                        }
                        <a asp-controller="Sessions" asp-action="ByAttendee" asp-route-attendeeId="@Model.Id" class="inline-flex items-center px-4 py-2 bg-cyan-50 text-cyan-700 text-sm font-medium rounded-lg hover:bg-cyan-100 transition-colors duration-200">
                            <i class="bi bi-calendar-event"></i> View Sessions
                        </a>
                        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-gray-50 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-100 transition-colors duration-200">
                            <i class="bi bi-plus-lg"></i> Add Another Attendee
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h6 class="card-title mb-0">Attendee Profile</h6>
                </div>
                <div class="card-body text-center">
                    <div class="avatar-circle-large mx-auto mb-3">
                        @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                    </div>
                    <h6 class="text-lg font-semibold text-gray-900">@Model.FirstName @Model.LastName</h6>
                    @if (!string.IsNullOrEmpty(Model.JobTitle))
                    {
                        <p class="card-text text-muted">@Model.JobTitle</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Company))
                    {
                        <p class="card-text"><small class="text-gray-600">@Model.Company</small></p>
                    }
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h6 class="card-title mb-0">Attendance Stats</h6>
                </div>
                <div class="p-6">
                    <p class="card-text">
                        <i class="bi bi-calendar-event"></i> Sessions Registered: <span class="badge bg-primary">TBD</span>
                    </p>
                    <p class="card-text">
                        <i class="bi bi-check-circle"></i> Sessions Attended: <span class="px-2 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">TBD</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle-large {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #6c757d;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 24px;
    }
</style>

