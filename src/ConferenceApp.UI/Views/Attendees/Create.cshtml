@model Attendee

@{
    ViewData["Title"] = "Create Attendee";
}

<div class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="lg:col-span-2">
            <h2>Add New Attendee</h2>
            
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="">
                        <div class="mb-6">
                            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="FirstName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                            <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <div class="">
                        <div class="mb-6">
                            <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="LastName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                            <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-6">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    <div class="form-text">We'll use this email for all communication.</div>
                </div>

                <div class="mb-6">
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Phone" type="tel" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="">
                        <div class="mb-6">
                            <label asp-for="Company" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="Company" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="Company" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <div class="">
                        <div class="mb-6">
                            <label asp-for="JobTitle" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="JobTitle" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="JobTitle" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-6">
                    <label asp-for="Bio" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <textarea asp-for="Bio" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" rows="3" placeholder="Tell us about yourself (optional)..."></textarea>
                    <span asp-validation-for="Bio" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ConferenceId" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <select asp-for="ConferenceId" class="form-select" required>
                        <option value="">Select a conference...</option>
                    </select>
                    <span asp-validation-for="ConferenceId" class="text-red-600 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="">
                        <div class="mb-6">
                            <label asp-for="RegistrationDate" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="RegistrationDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="RegistrationDate" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    <div class="">
                        <div class="mb-3 form-check mt-4">
                            <input asp-for="IsConfirmed" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                            <label asp-for="IsConfirmed" class="ml-3 text-sm font-medium text-gray-700"></label>
                            <div class="form-text">Check if the attendee has confirmed their attendance.</div>
                        </div>
                    </div>
                </div>

                <div class="mb-6">
                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                        <i class="bi bi-check-lg"></i> Create Attendee
                    </button>
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
        
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h5 class="card-title mb-0">Registration Tips</h5>
                </div>
                <div class="p-6">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> Verify email address for accuracy</li>
                        <li><i class="bi bi-check-circle text-success"></i> Include company and job title for networking</li>
                        <li><i class="bi bi-check-circle text-success"></i> Send confirmation email after registration</li>
                        <li><i class="bi bi-check-circle text-success"></i> Follow up with unconfirmed attendees</li>
                    </ul>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h6 class="card-title mb-0">Quick Actions</h6>
                </div>
                <div class="p-6">
                    <div class="d-grid gap-2">
                        <a asp-controller="Conferences" asp-action="Index" class="inline-flex items-center px-3 py-1 bg-blue-50 text-blue-700 text-sm rounded-lg hover:bg-blue-100 transition-colors duration-200">
                            <i class="bi bi-building"></i> View Conferences
                        </a>
                        <a asp-controller="Sessions" asp-action="Index" class="inline-flex items-center px-3 py-1 bg-green-50 text-green-700 text-sm rounded-lg hover:bg-green-100 transition-colors duration-200">
                            <i class="bi bi-calendar-event"></i> View Sessions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
