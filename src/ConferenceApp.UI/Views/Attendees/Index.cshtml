@model IEnumerable<Attendee>

@{
    ViewData["Title"] = "Attendees";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div class="flex items-center space-x-3">
            <div class="p-2 bg-blue-100 rounded-lg">
                <i class="fas fa-users text-blue-600 text-xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h1>
        </div>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
            <i class="fas fa-plus mr-2"></i> Add New Attendee
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registration Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var attendee in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 rounded-full bg-gray-500 text-white flex items-center justify-center font-bold text-sm mr-4">
                                            @attendee.FirstName.Substring(0, 1)@attendee.LastName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@attendee.FirstName @attendee.LastName</div>
                                            @if (!string.IsNullOrEmpty(attendee.JobTitle))
                                            {
                                                <div class="text-sm text-gray-500">@attendee.JobTitle</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@attendee.Email</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@(attendee.Company ?? "Not specified")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@attendee.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (attendee.IsConfirmed)
                                    {
                                        <span class="px-2 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">Pending</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <div class="flex justify-center space-x-2">
                                        <a asp-action="Details" asp-route-id="@attendee.Id" class="inline-flex items-center px-3 py-1 bg-blue-50 text-blue-700 text-sm rounded-lg hover:bg-blue-100 transition-colors duration-200">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@attendee.Id" class="inline-flex items-center px-3 py-1 bg-gray-50 text-gray-700 text-sm rounded-lg hover:bg-gray-100 transition-colors duration-200">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@attendee.Id" class="inline-flex items-center px-3 py-1 bg-red-50 text-red-700 text-sm rounded-lg hover:bg-red-100 transition-colors duration-200">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-12 bg-white rounded-xl shadow-md">
            <i class="fas fa-users text-5xl text-gray-400 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No Attendees Found</h3>
            <p class="text-gray-600 mb-6">Get started by adding your first attendee.</p>
            <a asp-action="Create" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                <i class="fas fa-plus mr-2"></i> Add First Attendee
            </a>
        </div>
    }
</div>
