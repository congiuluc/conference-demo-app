<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conference Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/frontend_mvc.styles.css" asp-append-version="true" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            900: '#1e3a8a'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body>
    <header>
        <nav class="bg-gray-300 shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 font-bold text-xl hover:text-gray-900 transition-colors duration-200">
                                <i class="fas fa-calendar-alt mr-2"></i>Conference Management
                            </a>
                        </div>
                        <div class="hidden md:ml-6 md:flex md:space-x-8">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                                <i class="fas fa-home mr-1"></i>Dashboard
                            </a>
                            <a asp-area="" asp-controller="Conferences" asp-action="Index" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                                <i class="fas fa-calendar-alt mr-1"></i>Conferences
                            </a>
                            <a asp-area="" asp-controller="Speakers" asp-action="Index" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                                <i class="fas fa-users mr-1"></i>Speakers
                            </a>
                            <a asp-area="" asp-controller="Sessions" asp-action="Index" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                                <i class="fas fa-presentation mr-1"></i>Sessions
                            </a>
                            <a asp-area="" asp-controller="Attendees" asp-action="Index" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                                <i class="fas fa-user-friends mr-1"></i>Attendees
                            </a>
                        </div>
                    </div>
                    <div class="md:hidden flex items-center">
                        <button type="button" class="text-gray-700 hover:text-gray-900 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" onclick="toggleMobileMenu()">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Mobile menu -->
            <div id="mobile-menu" class="md:hidden hidden">
                <div class="px-2 pt-2 pb-3 space-y-1 bg-gray-400">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                    <a asp-area="" asp-controller="Conferences" asp-action="Index" class="text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-calendar-alt mr-2"></i>Conferences
                    </a>
                    <a asp-area="" asp-controller="Speakers" asp-action="Index" class="text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-users mr-2"></i>Speakers
                    </a>
                    <a asp-area="" asp-controller="Sessions" asp-action="Index" class="text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-presentation mr-2"></i>Sessions
                    </a>
                    <a asp-area="" asp-controller="Attendees" asp-action="Index" class="text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-user-friends mr-2"></i>Attendees
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="min-h-screen bg-gray-50">
        <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200" style="background-color: #681F79;">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div class="text-white">
                    &copy; 2025 - Conference Management System
                </div>
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white hover:text-gray-200 transition-colors duration-200">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
