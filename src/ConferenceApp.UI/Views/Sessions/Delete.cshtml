@model Session

@{
    ViewData["Title"] = "Delete Session";
}

<div class="space-y-6">
    <div class="row justify-content-center">
        <div class="lg:col-span-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Session
                    </h3>
                </div>
                <div class="p-6">
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this session?
                    </div>

                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@(Model.Description ?? "No description")</dd>

                        <dt class="col-sm-3">Start Time:</dt>
                        <dd class="col-sm-9">@Model.StartTime.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>

                        <dt class="col-sm-3">End Time:</dt>
                        <dd class="col-sm-9">@Model.EndTime.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>

                        <dt class="col-sm-3">Duration:</dt>
                        <dd class="col-sm-9">@Model.Duration minutes</dd>

                        <dt class="col-sm-3">Location:</dt>
                        <dd class="col-sm-9">@(Model.Location ?? "TBD")</dd>

                        <dt class="col-sm-3">Max Attendees:</dt>
                        <dd class="col-sm-9">@Model.MaxAttendees</dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>

                        <dt class="col-sm-3">Last Updated:</dt>
                        <dd class="col-sm-9">@(Model.ModifiedDate?.ToString("MM/dd/yyyy") ?? "Never")</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200" onclick="return confirm('Are you absolutely sure you want to delete this session? This action cannot be undone.')">
                            <i class="bi bi-trash3"></i> Yes, Delete Session
                        </button>
                    </form>
                    
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    
                    <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-cyan-50 text-cyan-700 text-sm font-medium rounded-lg hover:bg-cyan-100 transition-colors duration-200">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
