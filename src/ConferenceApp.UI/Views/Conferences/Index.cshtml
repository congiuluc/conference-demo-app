@model IEnumerable<Conference>
@{
    ViewData["Title"] = "Conferences";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
            <div class="p-2 bg-blue-100 rounded-lg">
                <i class="fas fa-calendar-alt text-blue-600 text-xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h1>
        </div>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
            <i class="fas fa-plus mr-2"></i>
            Add New Conference
        </a>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var conference in Model)
            {
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200">
                    @if (!string.IsNullOrEmpty(conference.LogoUrl))
                    {
                        <img src="@conference.LogoUrl" class="w-full h-48 object-cover" alt="@conference.Name">
                    }
                    else
                    {
                        <div class="w-full h-48 bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
                            <i class="fas fa-calendar-alt text-white text-4xl"></i>
                        </div>
                    }
                    
                    <div class="p-6 flex flex-col h-full">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">@conference.Name</h3>
                        
                        <div class="space-y-2 mb-4">
                            <div class="flex items-center text-sm text-gray-600">
                                <i class="fas fa-map-marker-alt mr-2 text-gray-400"></i>
                                @conference.Location
                            </div>
                            <div class="flex items-center text-sm text-gray-600">
                                <i class="fas fa-calendar mr-2 text-gray-400"></i>
                                @conference.StartDate.ToString("MMM dd") - @conference.EndDate.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                        
                        <p class="text-gray-700 text-sm mb-4 flex-grow">
                            @(conference.Description.Length > 100 ? conference.Description.Substring(0, 100) + "..." : conference.Description)
                        </p>
                        
                        @if (conference.Categories?.Any() == true)
                        {
                            <div class="mb-4">
                                <div class="flex flex-wrap gap-1">
                                    @foreach (var category in conference.Categories.Take(3))
                                    {
                                        <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">@category</span>
                                    }
                                    @if (conference.Categories.Count > 3)
                                    {
                                        <span class="px-2 py-1 bg-gray-200 text-gray-600 text-xs rounded-full">+@(conference.Categories.Count - 3) more</span>
                                    }
                                </div>
                            </div>
                        }
                        
                        <div class="flex justify-between items-center mb-4">
                            <span class="text-sm text-gray-600">
                                @conference.CurrentAttendees/@conference.MaxAttendees attendees
                            </span>
                            @if (conference.IsActive)
                            {
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Active</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Inactive</span>
                            }
                        </div>
                        
                        <div class="space-y-2">
                            <div class="flex space-x-2">
                                <a asp-action="Details" asp-route-id="@conference.Id" class="flex-1 px-3 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-eye mr-1"></i> View
                                </a>
                                <a asp-action="Sessions" asp-route-id="@conference.Id" class="flex-1 px-3 py-2 bg-cyan-50 text-cyan-700 text-sm font-medium rounded-lg hover:bg-cyan-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-presentation mr-1"></i> Sessions
                                </a>
                                <a asp-action="Speakers" asp-route-id="@conference.Id" class="flex-1 px-3 py-2 bg-yellow-50 text-yellow-700 text-sm font-medium rounded-lg hover:bg-yellow-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-users mr-1"></i> Speakers
                                </a>
                            </div>
                            <div class="flex space-x-2">
                                <a asp-action="Edit" asp-route-id="@conference.Id" class="flex-1 px-3 py-2 bg-gray-50 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-edit mr-1"></i> Edit
                                </a>
                                <a asp-action="Attendees" asp-route-id="@conference.Id" class="flex-1 px-3 py-2 bg-green-50 text-green-700 text-sm font-medium rounded-lg hover:bg-green-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-user-friends mr-1"></i> Attendees
                                </a>
                                <a asp-action="Delete" asp-route-id="@conference.Id" class="flex-1 px-3 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors duration-200 text-center">
                                    <i class="fas fa-trash mr-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-12 bg-white rounded-xl shadow-md">
            <i class="fas fa-calendar-alt text-5xl text-gray-400 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No conferences found</h3>
            <p class="text-gray-600 mb-6">Get started by creating your first conference.</p>
            <a asp-action="Create" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                <i class="fas fa-plus mr-2"></i>
                Create Conference
            </a>
        </div>
    }
</div>
