@model IEnumerable<Speaker>

@{
    ViewData["Title"] = $"Speakers - {ViewBag.Conference?.Name}";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-person-badge"></i> Conference Speakers
            </h2>
            @if (ViewBag.Conference != null)
            {
                <p class="text-muted mb-0">
                    <i class="fas fa-calendar-alt"></i> @ViewBag.Conference.Name
                </p>
            }
        </div>
        <div>
            <a asp-controller="Speakers" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add New Speaker
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var speaker in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@speaker.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@speaker.Title</h6>
                            <p class="card-text">@speaker.Company</p>
                            
                            @if (!string.IsNullOrEmpty(speaker.Bio))
                            {
                                <p class="card-text">
                                    @(speaker.Bio.Length > 100 ? speaker.Bio.Substring(0, 100) + "..." : speaker.Bio)
                                </p>
                            }
                            
                            @if (!string.IsNullOrEmpty(speaker.Email))
                            {
                                <p class="card-text">
                                    <i class="bi bi-envelope"></i> @speaker.Email
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Speakers" asp-action="Details" asp-route-id="@speaker.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-controller="Speakers" asp-action="Edit" asp-route-id="@speaker.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Speakers" asp-action="Delete" asp-route-id="@speaker.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-person-badge display-1 text-muted"></i>
            <h3 class="mt-3">No Speakers Found</h3>
            <p class="text-muted">This conference doesn't have any speakers yet.</p>
            <a asp-controller="Speakers" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add First Speaker
            </a>
        </div>
    }

    <div class="mt-3">
        @if (ViewBag.Conference != null)
        {
            <a asp-action="Details" asp-route-id="@ViewBag.Conference.Id" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Conference
            </a>
        }
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-list"></i> All Conferences
        </a>
    </div>
</div>