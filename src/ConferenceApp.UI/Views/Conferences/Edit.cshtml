@model Conference

@{
    ViewData["Title"] = "Edit Conference";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center space-x-3">
        <div class="p-2 bg-blue-100 rounded-lg">
            <i class="fas fa-edit text-blue-600 text-xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-900">Edit Conference</h1>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                        <i class="fas fa-edit text-blue-600 mr-2"></i> Edit Conference Details
                    </h2>
                </div>
                <div class="p-6">
                    <form asp-action="Edit" method="post" class="space-y-6">
                        <input type="hidden" asp-for="Id" />
                        
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">Conference Name *</label>
                            <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
                            <textarea asp-for="Description" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required></textarea>
                            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-2">Start Date *</label>
                                <input asp-for="StartDate" type="datetime-local" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                                <span asp-validation-for="StartDate" class="text-red-600 text-sm"></span>
                            </div>
                            <div>
                                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-2">End Date *</label>
                                <input asp-for="EndDate" type="datetime-local" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                                <span asp-validation-for="EndDate" class="text-red-600 text-sm"></span>
                            </div>
                        </div>

                        <div>
                            <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-2">Location *</label>
                            <input asp-for="Location" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                            <span asp-validation-for="Location" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="MaxAttendees" class="block text-sm font-medium text-gray-700 mb-2">Maximum Attendees *</label>
                            <input asp-for="MaxAttendees" type="number" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                            <span asp-validation-for="MaxAttendees" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="flex items-center">
                            <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                            <label asp-for="IsActive" class="ml-3 text-sm font-medium text-gray-700">Conference is Active</label>
                        </div>

                        <div class="flex flex-col sm:flex-row justify-between gap-4 pt-6 border-t border-gray-200">
                            <div class="flex flex-col sm:flex-row gap-3">
                                <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200">
                                    <i class="fas fa-arrow-left mr-2"></i> Back to List
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-cyan-50 text-cyan-700 text-sm font-medium rounded-lg hover:bg-cyan-100 transition-colors duration-200">
                                    <i class="fas fa-eye mr-2"></i> View Details
                                </a>
                            </div>
                            <button type="submit" class="inline-flex items-center px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                                <i class="fas fa-save mr-2"></i> Update Conference
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900">Conference Information</h5>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <span class="text-sm font-medium text-gray-500">Created:</span>
                        <p class="text-sm text-gray-900">@Model.CreatedDate.ToString("MM/dd/yyyy")</p>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500">Last Updated:</span>
                        <p class="text-sm text-gray-900">@(Model.ModifiedDate?.ToString("MM/dd/yyyy") ?? "Never")</p>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500">Status:</span>
                        <div class="mt-1">
                            @if (Model.IsActive)
                            {
                                <span class="px-2 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">Active</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-sm font-medium rounded-full">Inactive</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
