@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="bg-white rounded-xl shadow-md p-8">
    <div class="flex items-center space-x-3 mb-6">
        <div class="p-2 bg-blue-100 rounded-lg">
            <i class="fas fa-shield-alt text-blue-600 text-xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h1>
    </div>

    <div class="prose max-w-none">
        <p class="text-gray-700 leading-relaxed">
            Use this page to detail your site's privacy policy.
        </p>
        
        <div class="mt-8 p-4 bg-blue-50 rounded-lg border-l-4 border-blue-400">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-info-circle text-blue-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-blue-700">
                        This is a sample privacy policy page. In a real application, you would include detailed information about how you collect, use, and protect user data.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
