@model ConferenceApp.UI.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center space-x-3">
        <div class="p-2 bg-blue-100 rounded-lg">
            <i class="fas fa-tachometer-alt text-blue-600 text-xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-900">Conference Management Dashboard</h1>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="flex-1">
                    <div class="text-sm font-medium text-blue-600 uppercase tracking-wide">Active Conferences</div>
                    <div class="text-2xl font-bold text-gray-900 mt-1">@Model.TotalConferences</div>
                </div>
                <div class="flex-shrink-0">
                    <i class="fas fa-calendar-alt text-3xl text-gray-400"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="flex-1">
                    <div class="text-sm font-medium text-green-600 uppercase tracking-wide">Total Speakers</div>
                    <div class="text-2xl font-bold text-gray-900 mt-1">@Model.TotalSpeakers</div>
                </div>
                <div class="flex-shrink-0">
                    <i class="fas fa-users text-3xl text-gray-400"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-cyan-500 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="flex-1">
                    <div class="text-sm font-medium text-cyan-600 uppercase tracking-wide">Total Sessions</div>
                    <div class="text-2xl font-bold text-gray-900 mt-1">@Model.TotalSessions</div>
                </div>
                <div class="flex-shrink-0">
                    <i class="fas fa-presentation text-3xl text-gray-400"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-500 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="flex-1">
                    <div class="text-sm font-medium text-yellow-600 uppercase tracking-wide">Total Attendees</div>
                    <div class="text-2xl font-bold text-gray-900 mt-1">@Model.TotalAttendees</div>
                </div>
                <div class="flex-shrink-0">
                    <i class="fas fa-user-friends text-3xl text-gray-400"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Active Conferences -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                    <i class="fas fa-calendar-alt text-blue-600 mr-2"></i>
                    Active Conferences
                </h2>
                <a asp-controller="Conferences" asp-action="Index" class="px-3 py-1 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    View All
                </a>
            </div>
            <div class="p-6">
                @if (Model.ActiveConferences?.Any() == true)
                {
                    <div class="space-y-4">
                        @foreach (var conference in Model.ActiveConferences)
                        {
                            <div class="p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow duration-200">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-medium text-gray-900 mb-1">
                                            <a asp-controller="Conferences" asp-action="Details" asp-route-id="@conference.Id" class="hover:text-blue-600 transition-colors duration-200">
                                                @conference.Name
                                            </a>
                                        </h3>
                                        <div class="text-sm text-gray-600 mb-2 space-y-1">
                                            <div class="flex items-center">
                                                <i class="fas fa-map-marker-alt mr-2 text-gray-400"></i>
                                                @conference.Location
                                            </div>
                                            <div class="flex items-center">
                                                <i class="fas fa-calendar mr-2 text-gray-400"></i>
                                                @conference.StartDate.ToString("MMM dd") - @conference.EndDate.ToString("MMM dd, yyyy")
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-2">
                                            <span class="text-sm text-gray-600">@conference.CurrentAttendees/@conference.MaxAttendees attendees</span>
                                            <div class="flex-1 bg-gray-200 rounded-full h-2">
                                                <div class="bg-blue-600 h-2 rounded-full" style="width: @(conference.MaxAttendees > 0 ? (conference.CurrentAttendees * 100 / conference.MaxAttendees) : 0)%"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        @if (conference.IsActive)
                                        {
                                            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Active</span>
                                        }
                                        else
                                        {
                                            <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Inactive</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-calendar-alt text-4xl text-gray-400 mb-4"></i>
                        <p class="text-gray-600 mb-4">No active conferences found.</p>
                        <a asp-controller="Conferences" asp-action="Create" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                            <i class="fas fa-plus mr-2"></i>
                            Create Conference
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Upcoming Sessions -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                    <i class="fas fa-presentation text-blue-600 mr-2"></i>
                    Upcoming Sessions
                </h2>
                <a asp-controller="Sessions" asp-action="Index" class="px-3 py-1 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    View All
                </a>
            </div>
            <div class="p-6">
                @if (Model.UpcomingSessions?.Any() == true)
                {
                    <div class="space-y-4">
                        @foreach (var session in Model.UpcomingSessions)
                        {
                            <div class="p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow duration-200">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-medium text-gray-900 mb-1">
                                            <a asp-controller="Sessions" asp-action="Details" asp-route-id="@session.Id" class="hover:text-blue-600 transition-colors duration-200">
                                                @session.Title
                                            </a>
                                        </h3>
                                        <div class="text-sm text-gray-600 space-y-1">
                                            @if (session.ScheduledStartTime.HasValue)
                                            {
                                                <div class="flex items-center">
                                                    <i class="fas fa-clock mr-2 text-gray-400"></i>
                                                    @session.ScheduledStartTime.Value.ToString("MMM dd, yyyy - HH:mm")
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(session.Room))
                                            {
                                                <div class="flex items-center">
                                                    <i class="fas fa-map-marker-alt mr-2 text-gray-400"></i>
                                                    @session.Room
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <span class="px-2 py-1 bg-cyan-100 text-cyan-800 text-xs font-medium rounded-full">@session.Type</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-presentation text-4xl text-gray-400 mb-4"></i>
                        <p class="text-gray-600 mb-4">No upcoming sessions scheduled.</p>
                        <a asp-controller="Sessions" asp-action="Create" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                            <i class="fas fa-plus mr-2"></i>
                            Create Session
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                <i class="fas fa-bolt text-blue-600 mr-2"></i>
                Quick Actions
            </h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <a asp-controller="Conferences" asp-action="Create" class="group p-6 bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl border-2 border-blue-200 hover:border-blue-400 transition-all duration-200 text-center">
                    <i class="fas fa-calendar-plus text-4xl text-blue-600 mb-3 group-hover:scale-110 transition-transform duration-200"></i>
                    <div class="text-lg font-medium text-blue-900">New Conference</div>
                </a>
                <a asp-controller="Speakers" asp-action="Create" class="group p-6 bg-gradient-to-br from-green-50 to-green-100 rounded-xl border-2 border-green-200 hover:border-green-400 transition-all duration-200 text-center">
                    <i class="fas fa-user-plus text-4xl text-green-600 mb-3 group-hover:scale-110 transition-transform duration-200"></i>
                    <div class="text-lg font-medium text-green-900">Add Speaker</div>
                </a>
                <a asp-controller="Sessions" asp-action="Create" class="group p-6 bg-gradient-to-br from-cyan-50 to-cyan-100 rounded-xl border-2 border-cyan-200 hover:border-cyan-400 transition-all duration-200 text-center">
                    <i class="fas fa-plus-square text-4xl text-cyan-600 mb-3 group-hover:scale-110 transition-transform duration-200"></i>
                    <div class="text-lg font-medium text-cyan-900">Create Session</div>
                </a>
                <a asp-controller="Attendees" asp-action="Create" class="group p-6 bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl border-2 border-yellow-200 hover:border-yellow-400 transition-all duration-200 text-center">
                    <i class="fas fa-user-check text-4xl text-yellow-600 mb-3 group-hover:scale-110 transition-transform duration-200"></i>
                    <div class="text-lg font-medium text-yellow-900">Register Attendee</div>
                </a>
            </div>
        </div>
    </div>
</div>
